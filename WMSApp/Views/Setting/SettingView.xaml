            CachingStrategy="RecycleElement"
            HasUnevenRows="True"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
            ItemsSource="{Binding ItemsSource, Mode=TwoWay}">

            <ListView.ItemTemplate>
                <DataTemplate>

                    <ImageCell ImageSource="settings_grey192.png" 
